                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="DTH"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
